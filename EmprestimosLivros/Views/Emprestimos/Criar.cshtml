@model EmprestimosModel
@{
    ViewData["Title"] = "Criar Empréstimo";
}
<div class="container bg-dark rounded-5" >
    <div class="mb-5 text-center">
        <h1>Criação de Empréstimos</h1>
    </div>

    <form method="post" asp-asp-controller="Emprestimos" asp-action="Criar"> 
        <div class="mb-3">
            <label for="Emprestador" class="form-label text-light">Emprestador</label>
            <input type="text" class="form-control" asp-for="Emprestador" id="Emprestador" placeholder="Quem empresta o livro?">
            <
        </div>
        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebedor</label>
            <input type="text" class="form-control" asp-for="Recebedor" id="Recebedor" placeholder="A quem será emprestado o livro?">
        </div>
        <div class="mb-3">
            <label for="NomeLivro" class="form-label text-light">Nome do livro</label>
            <input type="text" class="form-control" asp-for="NomeLivro" id="NomeLivro" placeholder="Nome do livro a ser emprestado?">
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Adicionar</button>
            <a class="btn btn-primary w-50" asp-asp-controller="Emprestimos" asp-action="Index">Voltar</a>
        </div>
        
    </form>
</div>